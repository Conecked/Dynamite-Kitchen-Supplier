<div>
	{{> header}}
</div>
<div class="container">
	<div class="background z-depth-3">
		<div class="row padIt">
			<table class='highlight'>
				<thead id='product-list' class='list-group'>
					<tr>
						<th>Name</th>
						<th>Category</th>
						<th>On Hand</th>
						<th>PAR</th>
						<th>QTY to Order</th>
						<th></th>
					</tr>
				</thead>
				<tbody class='list-group-item'>
					{{#each par}}
					<tr>
						<td id="order-{{this.id}}" data-prodid="{{this.prodID}}" class="prodName">{{this.prodName}}</td>
						<td class="prodCategory">{{this.prodCategory}}</td>
						<td>{{this.prodOnHand}}</td>
						<td>{{this.prodPAR}}</td>
						<td>
							<input id="{{this.id}}" type="text" class="input-field qtyRequested" value="{{this.olQuantity}}">
						</td>
						<td>{{> addOne}}</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
		<br>
		<div>
			<a id='logOut' class='btn btn-primary right' href='/'>Log out</a>
			{{> navbuttons}}
		</div>
	</div>
</div>

<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js'></script>
<script src='/js/underpar.js'></script>
<script src='/js/index.js'></script>