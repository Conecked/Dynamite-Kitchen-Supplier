<div>
	{{> header}}
</div>
<div class="container">
	<div class="background z-depth-3">
		<div class="row padIt">
			<table class='highlight'>
				<thead id='product-list' class='list-group'>
					<tr>
						<th>Name</th>
						<th class='center-align'>Category</th>
						<th class='center-align'>On Hand</th>
						<th class='center-align'>PAR</th>
						<th class='center-align'>QTY to Order</th>
						<th class='center-align'>Unit of Issue</th>
					</tr>
				</thead>
				<tbody class='list-group-item'>
					{{#each par}}
					<tr>
						<td class='prodName'>{{this.prodName}}</td>
						<td class='prodCategory center-align'>{{this.prodCategory}}</td>
						<td class='center-align'>{{this.prodOnHand}}</td>
						<td class='center-align'>{{this.prodPAR}}</td>
						<td>
							<input id="{{this.id}}" data-olid="{{olID}}" type="text" class="input-field qtyRequested center-align" value="{{this.olQuantity}}">
						</td>
						<td class='center-align'>{{this.prodUnitofIssue}}</td>
						<td>{{> addOne}}</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
		<div class='row'>
			<div class='nav-style'>
				{{> navbuttons}}
			</div>
		</div>
	</div>
</div>

<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js'></script>
<script src='/js/underPar.js'></script>
<script src='/js/index.js'></script>